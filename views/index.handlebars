<div class="container-fluid">

    <div class="row">
        <div class="col">
            <div class="text-center">
                <img class="img-fluid" src="/assets/images/burger.png">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1>BURGER ANNIHILATOR</h1>
            </div>
        </div>
    </div>
     
</div>

<div class="container-fluid">
    <div class="row">

        <div id="notDevouredBurger" class="col-md-6 d-flex justify-content-center">
            <div>
                <h5>Burger Bucket List</h5>
            {{!-- </div>
            <div> --}}
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>       
                                {{this.burger_name}}
                                <button data-id="{{this.id}}" class="devourIt">DEVOUR IT</button>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div id="devouredBurger" class="col-md-6 d-flex justify-content-center">
            <div>
                <h5>Annihilated Burgers</h5>
            {{!-- </div>
            <div> --}}
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <li>       
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

    </div>
</div>

<div class="container-fluid" id="addBurgerBlock">

    <div class="row">
        <div class="col">
            <div class="text-center">
                <h3>Add A Burger To Be Annihilated</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center">
                        <form class="create-form">

            <div class="form-group">
                <input type="text" id="burgerName" name="burgerName" placeholder="Add Burger name here ..." maxlength="50">

            <button type="submit" id="newBurger">Add Burger</button>
        </form>
            </div>
        </div>
    </div>

</div>

